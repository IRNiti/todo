<div class="card card_show">
  <h1>New Recurring Task</h1>
  <div class="horizontal_line hl_show"></div>

  <%= form_with model: @recurrence do |form| %>
    <div class="container form_input">
      <div class="form_label">
        <%= form.label :name %>
      </div>
      <%= form.text_field :name %>
      <% @recurrence.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="container form_input">
      <div class="form_label">
        <%= form.label :description %>
      </div>
      <%= form.text_area :description %>
      <% @recurrence.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="container form_input">
      <label>Recurrence </label>
      <%= form.text_field :repeat_interval %>
    </div>
    <div class="container form_input">
      <label>Start Date </label>
      <%= form.date_field :start_date %>
    </div>
    <div class="container form_input">
      <label>End Date </label>
      <%= form.date_field :end_date %>
    </div>
 
    <%= form.submit %>
  <% end %>
</div>