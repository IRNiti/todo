<div class="card card_show">
  <h2><%= @chore.name %></h2>
  <div class="horizontal_line hl_show"></div>

  <p><%= @chore.description %></p>
  <% if @chore.user_id == nil %>
    <p>Unassigned</p>
  <% else %>
    <p>Assigned to <%= @chore.user.name %></p>
  <% end %>
  <p><%= check_box("chore", @chore.id, {checked: @chore.done}) %> Done</p>

  <div class="button-container">
    <div class="button">
      <%= link_to "Show all", chores_path%>
    </div>
    <div class="button">
      <%= link_to "Edit", edit_chore_path(@chore) %>
    </div>
    <div class="button">
      <%= link_to "Delete", chore_path(@chore), method: :delete, data: { confirm: "Are you sure?"}%>
    </div>
  </div>
</div>